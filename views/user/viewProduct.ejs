 <script>
  function addToCart(proId, price) {
    $.ajax({
      url: '/addTocart',
      data: {
        productId: proId,
        productPrice: price
      },
      method: "post",
      success: (response) => {
        if (response.success) {
          $('.table-shopping-cart').load('/wishlist .table-shopping-cart')
          // $('#total').load('/wishlist #total')

          console.log(response);
          Swal.fire({
            title: 'Added',
            text: 'Item added to Cart',
            icon: 'success',
            timer: 1000,
            showConfirmButton: false
          })
        } else {
          Swal.fire({
            text: 'Item already in Cart',
            icon: 'info',
            timer: 1000,
            showConfirmButton: false
          })
        }

      }
    })
  }
</script>




