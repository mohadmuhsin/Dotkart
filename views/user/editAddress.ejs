<%- include ('../layouts/user/header.ejs') %>
<%- include ('../layouts/user/navbar.ejs') %>

<div class="row mt-3 mx-3" style="margin-top:250px ;">

  <div class="col-md-9 justify-content-center">
    <div class="card card-custom pb-4  m-t-100  m-b-50 ">
      <div class="card-body mt-0 mx-5">
        <div class="text-center mb-3 pb-2 mt-3">
          <h4 style="color: #495057 ;">Delivery Details</h4>
        </div>

        <form class="mb-0" method="post">
          <style>
            input::-webkit-outer-spin-button,
            input::-webkit-inner-spin-button {
              -webkit-appearance: none;
              margin: 0;
            }
          </style>
          <% user.address.forEach((x)=>{ %>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" class="form-control input-custom" name="Name" value="<%= x.name %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" class="form-control input-custom" name="Housename" value="<%= x.housename %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" class="form-control input-custom" name="Street" value="<%= x.street %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" class="form-control input-custom" name="District" value="<%= x.district %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" class="form-control input-custom" name="State" value="<%= x.state %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" min="1" inputmode="numeric" class="form-control input-custom" name="Pincode" value="<%= x.pincode %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" class="form-control input-custom" name="Country" value="<%= x.country %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="number" min="1" inputmode="numeric" id="form9Example1" class="form-control input-custom" name="Phone" value="<%= x.phone %>" />
                <label class="form-label" for="form9Example1"></label>
              </div>
            </div>
          </div>

          <% if(typeof message!=="undefined"){%>
          <h1 style="font-size:16px;color:rgb(156, 2, 2);"><%=message %></h1>
          <%}%>

                <div class="float-right ">
                  <!-- Submit button -->

                  <button type="submit" class="btn btn-outline-success " style="padding-inline: 40px;"
                   > submit </button>
                 
                </div>
                <% }) %>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include ('../layouts/user/footer.ejs') %>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
  (() => {
    'use strict';

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.needs-validation');

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms).forEach((form) => {
      form.addEventListener('submit', (event) => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>