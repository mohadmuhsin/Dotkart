<%- include("../layouts/user/header.ejs") %>
  <div class="container">
    <div class="row justify-content-center align-items-center" style=" min-height: 100vh;">
      <div class="col-md-6 shadow">
        <div class="card bg-light rounded-1 shadow   p-3 ">
          <div class="card-body">
            <h4 class=" mb-2 " style="color: black; font-weight: bold ;">  Verification required <p
                style="color: rgb(0, 0, 0); font-size: 13px; margin-top: 15px; font-weight: normal; font-family: sans-serif;">
                To continue, complete this verification step. We've sent an OTP to the email. Please
                enter it below to complete verification.
              </p>  
            </h4>

            <form action="/verifyfgOTP" method="post">
              <div class="form-group ">
                <label for="otp" class="sr-only">OTP</label>
                <input type="number" name="otp" class="form-control" placeholder="Enter OTP" required>
              </div>
              <% if(typeof message !=='undefined' ){ %>
                <div class="alert alert-danger" role="alert">
                  <%= message %>
                </div>
                <% } %>
                  <div class="d-flex justify-content-end">

                    <button type="submit" class="btn btn-primary btn-success-hover  ">Submit</button>
                  </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include("../layouts/user/footer.ejs") %>