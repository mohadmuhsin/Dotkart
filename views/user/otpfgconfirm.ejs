<%- include("../layouts/user/header.ejs") %>
  <div class="container">
    <div class="row justify-content-center align-items-center" style=" min-height: 100vh;">
      <div class="col-md-6">
        <div class="card bg-light rounded-1 shadow  bg-body-tertiary border border-0 p-3 ">
          <div class="card-body">
            <h4 class=" mb-3">Please enter your OTP <p
                style="color: rgb(255, 153, 0); font-size: small;margin-top: 2px;">
                we have already sent an otp to your email
              </p>
            </h4>

            <form action="/verifyfgOTP" method="post">
              <div class="form-group ">
                <label for="otp" class="sr-only">OTP</label>
                <input type="number" name="otp" class="form-control" placeholder="Enter OTP" required>
              </div>
              <% if(typeof message !=='undefined' ){ %>
                <div class="alert alert-danger" role="alert">
                  <%= message %>
                </div>
                <% } %>
                <div class="d-flex justify-content-end">

                  <button type="submit" class="btn btn-primary btn-success-hover  ">Submit</button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include("../layouts/user/footer.ejs") %>