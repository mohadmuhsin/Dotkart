<%- include('../layouts/admin/navbar.ejs') %>
<%- include('../layouts/admin/sidebar.ejs') %>




<main id="main" class="main">

  <div class="pagetitle">
    <h1>Category</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
        <li class="breadcrumb-item active">Brand</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->
  <div class="col-12 mt-3">
    <a href="/admin/addBrand"> <button type="button" class="btn btn-dark mb-3">Add Brand</button></a>

  </div>

  <!-- Recent Sales -->
  <div class="col-12">
    <div class="card recent-sales overflow-auto">


      <div class="card-body">
        <h5 class="card-title">Brand</h5>

        <table class="table table-borderless datatable " style="margin-left: 10px;">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Brand</th>
              <th scope="col">Description</th>
              <!-- <th>image</th> -->
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <%  brand.forEach((x,index)=>{%>
            <tr>
              <th class="row"><%= index+1 %></th>
              <td><%= x.brand %></td>
              <td><%= x.description %></td>
              <!-- <td><img src="/proImages/<%= x.image%>" width="50px" height="50px" alt=""></td> -->
              <td>
                <!-- <a type="button" class="btn btn-outline-success  btn-sm   mb-2" href="/admin/editBrand/<%=x._id%>">edit</a> -->
             
              <%  if(x.status){ %>
              
                  <a type="button" class="btn btn-outline-warning btn-sm  mb-2" href="/admin/list/<%=x._id%>">Unlist</a>
              
                <%} else { %>
               
                  <a  type="button" class="btn btn-outline-danger btn-sm  mb-2" href="/admin/list/<%=x._id%>">List</a>
                  <% } %>
                </td>
               
            </tr>
            <% });%>
          </tbody>
        </table>
      </div>
    </div>
  </div><!-- End Recent Sales -->
  <% if(typeof message!=="undefined"){%>
  <h1 style="font-size:16px;color:rgb(73, 34, 227);"><%=message %></h1>
  <%}%>
</main><!-- End #main -->
