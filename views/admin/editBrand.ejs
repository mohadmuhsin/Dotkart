<%- include('../layouts/admin/header.ejs') %>
<%- include('../layouts/admin/navbar.ejs') %>
<%- include('../layouts/admin/sidebar.ejs') %>




<main id="main" class="main">

  <div calass="pagetitle">
    <h1>Edit Brand</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
        <li class="breadcrumb-item active"><a href="/admin/editBrand">Edit Brand</a></li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section dashboard">
    <div class="row">

      <div class="card">
        <div class="card-body">
          <br>
          <!-- Vertical Form -->
          <form class="row g-3" action="" method="post" enctype="multipart/form-data">
            <style>
              input::-webkit-outer-spin-button,
              input::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
              }
            </style>
            <div class="col-12">
              <label class="form-label">Brand Name</label>
              <input type="text" class="form-control" name="brand" value="<%= brand.brand%>">
            </div>

            <div class="col-12">
              <label class="form-label">Image</label>
              <input multiple type="file" class="form-control" name="Image">
              <img src="/proImages/<%=brand.image%>" width="50px" height="50px" alt="">
      


             
              <br><% if(typeof warning !== 'undefined'){ %>
              <div>
                <h5 style="color: red;"><%- warning %> </h5>
              </div>
              <% } %>


              <div class="col-12">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" name="Description" value="<%= brand.description %>">
              </div>

              <% if(typeof message !== 'undefined'){ %>
              <p style="color: brown;"><%- message %> </p>
              <% } %>
              <div class="text-center">
                <button type="submit" class="btn btn-success" style="float:right;  margin-top: 5px;  padding-inline: 50px;"> Submit</button>
              </div>
          </form><!-- Vertical Form -->

        </div>
      </div>
    </div>
  </section>



</main><!-- End #main -->
<!--     -->

<script>
  function show(input) {
    debugger;
    var validExtensions = ['jpg', 'png', 'jpeg']; //array of valid extensions
    var fileName = input.files[0].name;
    var fileNameExt = fileName.substr(fileName.lastIndexOf('.') + 1);
    if ($.inArray(fileNameExt, validExtensions) == -1) {
      input.type = ''
      input.type = 'file'
      $('#user_img').attr('src', "");
      alert("Only these file types are accepted : " + validExtensions.join(', '));
    } else {
      if (input.files && input.files[0]) {
        var filerdr = new FileReader();
        filerdr.onload = function(e) {
          $('#user_img').attr('src', e.target.result);
        }
        filerdr.readAsDataURL(input.files[0]);
      }
    }
  }
</script>
