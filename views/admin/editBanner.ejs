<%- include('../layouts/admin/header.ejs') %>
<%- include('../layouts/admin/navbar.ejs') %>
<%- include('../layouts/admin/sidebar.ejs') %>




<main id="main" class="main">

  <div calass="pagetitle">
    <h1>Edit Banner</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
        <li class="breadcrumb-item active"><a href="/admin/addbanner">Edit Banner</a></li>
      </ol>
    </nav>
  </div>

  <section class="section dashboard">
    <div class="row">
      <div class="card">
        <div class="card-body">
          <br>
          <!-- Vertical Form -->
          <form class="row g-3" action="" method="post" enctype="multipart/form-data" >
            <div class="col-12">
              <label for="inputNanme4" class="form-label">Banner Name</label>
              <input type="text" class="form-control" name="Name" value="<%=banner.name%>">
            </div>
            <div class="col-12">
              <label  class="form-control-file">Image</label>
              <input onchange="show(this)"   type="file" class="form-control"  name="image">
              <img src="/proImages/<%=banner.image%>" alt="" width="50px" height="50px">
            </div>
       
            <div class="col-12">
              <label for="fordescription" class="form-label">Description</label>
              <input type="text" class="form-control" name="Description" value="<%=banner.description%>">
            </div>
            <% if(typeof message !== 'undefined'){ %>
              <p style="color: brown;"><%- message %> </p>
              <% } %>
            <div class="text-center">
              <button type="submit" class="btn btn-success" style="float:right;   padding-inline: 50px;"> submit</button>
            </div>
          </form><!-- Vertical Form -->
        </div>
      </div>


      <!-- Right side columns -->
      <div class="col-lg-4">
      </div>
    </div>
  </section>

</main><!-- End #main -->
<script>
  function show(input) {
    debugger;
    var validExtensions = ['jpg', 'png', 'jpeg']; //array of valid extensions
    var fileName = input.files[0].name;
    var fileNameExt = fileName.substr(fileName.lastIndexOf('.') + 1);
    if ($.inArray(fileNameExt, validExtensions) == -1) {
      input.type = ''
      input.type = 'file'
      $('#user_img').attr('src', "");
      alert("Only these file types are accepted : " + validExtensions.join(', '));
    }
    else {
      if (input.files && input.files[0]) {
        var filerdr = new FileReader();
        filerdr.onload = function (e) {
          $('#user_img').attr('src', e.target.result);
        }
        filerdr.readAsDataURL(input.files[0]);
      }
    }
  }
</script>

